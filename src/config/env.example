
# Frontend Environment Variables
# Copy this to .env.local and update the values

# API Configuration - Point to your Flask backend
VITE_API_BASE_URL=http://localhost:8000/api

# Google OAuth (get from Google Cloud Console)
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Backend Environment Variables (for your Flask app)
# These are NOT used by the frontend, but documented for reference

# Database Connections
TIMESCALE_DB_URL=postgresql://username:password@localhost:5432/solar_timeseries
MONGODB_URI=mongodb://localhost:27017/solar_pv_dashboard

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ACCESS_TOKEN_EXPIRES=7200

# Google OAuth (same client ID, but with secret)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
CORS_ORIGINS=http://localhost:5173,https://your-frontend-domain.com

# Optional: Security
BCRYPT_LOG_ROUNDS=12
